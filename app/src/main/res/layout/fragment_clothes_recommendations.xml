<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E7"
    tools:context=".ui.clothes.clothesRecommendations.ClothesRecommendationsFragment">

    <ImageView
        android:id="@+id/imageViewModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/krop_top"
        tools:ignore="MissingConstraints"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageViewPopupBack"
        android:layout_width="match_parent"
        android:layout_height="273dp"
        android:layout_marginBottom="45dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bg_description" />

    <TextView
        android:id="@+id/textViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="стиль"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSeason"
        app:layout_constraintEnd_toEndOf="@+id/imageViewPopupBack"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewSeason" />

    <TextView
        android:id="@+id/textViewSeason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="сезон"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPopupBack"
        app:layout_constraintEnd_toStartOf="@+id/textViewMaterial"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toEndOf="@+id/textViewStyle"
        app:layout_constraintTop_toTopOf="@+id/imageViewPopupBack"
        app:layout_constraintVertical_bias="0.32" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="192dp"
        android:text="Кроп топ"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewPopupBack"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/textViewMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="материал"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSeason"
        app:layout_constraintEnd_toEndOf="@+id/imageViewPopupBack"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/textViewName"
        app:layout_constraintTop_toTopOf="@+id/textViewSeason" />

    <ImageButton
        android:id="@+id/button_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/next_btn"
        app:layout_constraintBottom_toTopOf="@+id/imageViewPopupBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <ImageButton
        android:id="@+id/button_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/back_btn"
        app:layout_constraintBottom_toTopOf="@+id/imageViewPopupBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/textViewStyleValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:text="спортивный"
        android:textColor="#8399A9"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPopupBack"
        app:layout_constraintEnd_toEndOf="@+id/textViewStyle"
        app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintStart_toStartOf="@+id/textViewStyle"
        app:layout_constraintTop_toBottomOf="@+id/textViewStyle"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/textViewSeasonValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="весна"
        android:textColor="#8399A9"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewStyleValue"
        app:layout_constraintEnd_toEndOf="@+id/textViewSeason"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewSeason"
        app:layout_constraintTop_toTopOf="@+id/textViewStyleValue" />

    <TextView
        android:id="@+id/textViewMaterialValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="вискоза"
        android:textColor="#8399A9"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewStyleValue"
        app:layout_constraintEnd_toEndOf="@+id/textViewMaterial"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textViewMaterial"
        app:layout_constraintTop_toTopOf="@+id/textViewStyleValue" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_back"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/btn_background_black"
        android:drawablePadding="20dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPopupBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Назад" />

    <ImageView
        android:id="@+id/imageViewColor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewColor3"
        app:layout_constraintEnd_toStartOf="@+id/imageViewColor2"
        app:layout_constraintHorizontal_bias="0.324"
        app:layout_constraintStart_toEndOf="@+id/textViewName"
        app:layout_constraintTop_toTopOf="@+id/imageViewColor3"
        app:srcCompat="@drawable/yellow_ball" />

    <ImageView
        android:id="@+id/imageViewColor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewColor3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewColor3"
        app:srcCompat="@drawable/red_ball" />

    <ImageView
        android:id="@+id/imageViewColor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textViewName"
        app:layout_constraintEnd_toStartOf="@+id/imageViewColor2"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toEndOf="@+id/imageViewColor1"
        app:layout_constraintTop_toTopOf="@+id/textViewName"
        app:srcCompat="@drawable/purple_ball" />


</androidx.constraintlayout.widget.ConstraintLayout>